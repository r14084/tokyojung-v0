{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**"]
      }
    },
    {
      "src": "apps/customer-pwa/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "apps/staff-dashboard/package.json",
      "use": "@vercel/static-build", 
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "/src/index.ts"
    },
    {
      "src": "/staff/assets/(.*)",
      "dest": "apps/staff-dashboard/dist/assets/$1"
    },
    {
      "src": "/staff.*",
      "dest": "apps/staff-dashboard/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "apps/customer-pwa/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install && npx prisma generate"
}