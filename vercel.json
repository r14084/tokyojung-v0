{
  "version": 2,
  "builds": [
    {
      "src": "apps/customer-pwa/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "apps/staff-dashboard/package.json",
      "use": "@vercel/static-build", 
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/staff/assets/(.*)",
      "dest": "apps/staff-dashboard/dist/assets/$1",
      "headers": {
        "cache-control": "max-age=31536000"
      }
    },
    {
      "src": "/staff/(.*)",
      "dest": "apps/staff-dashboard/dist/index.html"
    },
    {
      "src": "/staff",
      "dest": "apps/staff-dashboard/dist/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "apps/customer-pwa/dist/assets/$1",
      "headers": {
        "cache-control": "max-age=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "apps/customer-pwa/dist/$1"
    },
    {
      "src": "/",
      "dest": "apps/customer-pwa/dist/index.html"
    }
  ]
}